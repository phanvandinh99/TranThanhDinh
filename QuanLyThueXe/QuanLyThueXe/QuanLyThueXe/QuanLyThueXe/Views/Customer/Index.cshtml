@model IEnumerable<QuanLyThueXe.ViewModels.CustomerContractVM>

<h2 class="text-center mb-4">Danh sách khách hàng</h2>

<p class="text-end">
    <a asp-action="Create" class="btn btn-success">➕ Thêm khách hàng mới</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark text-center">
        <tr>
            <th>Họ tên</th>
            <th>CCCD</th>
            <th>SĐT</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Giới tính</th>
            <th>Ngày sinh</th>
            <th>Xe đang thuê</th>
            <th>Ngày kết thúc</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.IdentityCard</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Address</td>
                <td>@item.Gender</td>
                <td>@(item.BirthDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                <td>@item.CarModel</td>
                <td>@(item.EndDate.HasValue ? item.EndDate.Value.ToString("dd/MM/yyyy") : "-")</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn btn-primary btn-sm">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-warning btn-sm">Sửa</a>
                    <form asp-action="Delete" asp-route-id="@item.CustomerId" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc muốn xóa khách hàng này?');">
                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
