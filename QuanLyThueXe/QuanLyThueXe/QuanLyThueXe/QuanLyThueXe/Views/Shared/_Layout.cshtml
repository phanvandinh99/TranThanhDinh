@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    // Lấy session trong ASP.NET Core
    var session = HttpContextAccessor.HttpContext.Session;
    var role = session.GetString("Role") ?? "";
    var username = session.GetString("Username") ?? "Khách";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Hệ thống cho thuê xe</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark navbar-expand-sm">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">🚗 Cho Thuê Xe</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>

                    @if (role == "Admin")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Car" asp-action="Index">Quản lý xe</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Customer" asp-action="Index">Khách hàng</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Status" asp-action="Index">Tra cứu tình trạng xe</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Reservation" asp-action="Index">Đặt xe trước</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Contract" asp-action="Index">Hợp đồng thuê</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Report" asp-action="Index">Báo cáo</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Driver" asp-action="Index">Tài xế</a></li>
                    }
                    else if (role == "Manager")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Car" asp-action="Index">Quản lý xe</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Contract" asp-action="Index">Hợp đồng thuê</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Status" asp-action="Index">Tra cứu tình trạng xe</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Reservation" asp-action="Index">Đặt xe trước</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Driver" asp-action="Index">Tài xế</a></li>
                    }
                    else if (role == "Employee")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Status" asp-action="Index">Tra cứu tình trạng xe</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Reservation" asp-action="Index">Đặt xe trước</a></li>
                    }
                    else if (role == "Cashier")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Report" asp-action="Index">Báo cáo</a></li>
                    }
                    else if (role == "Customer")
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Status" asp-action="Index">Tra cứu tình trạng xe</a></li>
                    }
                </ul>

                <ul class="navbar-nav">
                    @* Sử dụng View Components *@
                    @await Component.InvokeAsync("Notification")
                    @await Component.InvokeAsync("UserMenu")
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-3">
        @RenderBody()
        <hr />
        <footer class="text-center text-muted">
            <p>&copy; @DateTime.Now.Year - Hệ thống quản lý cho thuê xe</p>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
