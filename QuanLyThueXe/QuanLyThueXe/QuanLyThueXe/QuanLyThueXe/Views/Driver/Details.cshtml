@model QuanLyThueXe.Models.Driver

@{
    ViewData["Title"] = "Chi tiết tài xế";
}

<h2 class="text-center mb-4">Chi tiết tài xế</h2>

<div class="container w-50">
    <div class="card shadow p-4 text-center">

        <img src="@Model.ImageUrl" class="rounded-circle mx-auto mb-3"
             style="width:150px;height:150px;object-fit:cover" />

        <h4 class="fw-bold">@Model.FullName</h4>
        <p><strong>Giới tính:</strong> @Model.Gender</p>
        <p><strong>Tuổi:</strong> @Model.Age</p>
        <p><strong>Điện thoại:</strong> @Model.Phone</p>
        <p><strong>Giá thuê/ngày:</strong> @string.Format("{0:N0} VNĐ", Model.PricePerDay)</p>
        <p><strong>Loại bằng:</strong> @Model.LicenseType</p>

        <p>
            <strong>Tình trạng:</strong>
            <span class="badge @(Model.IsAvailable == true ? "bg-success" : "bg-danger")">
                @(Model.IsAvailable == true ? "Đang rảnh" : "Đang bận")
            </span>
        </p>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.DriverId" class="btn btn-warning me-2">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>
